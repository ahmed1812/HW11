<p id="notice"><%= notice %></p>

<h1>Listing People</h1>

<table class="table table-bordered">
  <thead>
    <tr>
      <th>First name</th>
      <th>Last name</th>
      <th>Email</th>
      <th>Date of birth</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @people.each do |person| %>
      <tr>
        <td><%= person.first_name %></td>
        <td><%= person.last_name %></td>
        <td><%= person.email %></td>
        <td><%= person.date_of_birth %></td>
        <td><%= link_to 'Show', person ,  class:"btn btn-info" %></td>
        <td ><%= link_to 'Edit', edit_person_path(person) , class:"btn btn-warning" %></td>
        <td><%= link_to 'Destroy', person, method: :delete, data: { confirm: 'Are you sure?' } ,class:"btn btn-danger"  %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Person', new_person_path , class:"btn btn-default btn-lg active" %>
